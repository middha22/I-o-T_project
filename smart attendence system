#include <SPI.h>
#include <MFRC522.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define SS_PIN 10
#define RST_PIN 9

MFRC522 rfid(SS_PIN, RST_PIN);
LiquidCrystal_I2C lcd(0x27, 16, 2); 

struct Student {
  String cardID;
  String name;
};

Student students[] = {
  {"63 4B BB D9", "Aniket"},
  {"A3 62 F1 E4", "Aditya"},
  {"43 97 E1 E1", "Roshan"},
  {"87 48 33 02", "Dnyan"},
  {"02 88 4F 8B", "Aastha"}  
};

void setup() {
  Serial.begin(9600);
  SPI.begin();
  rfid.PCD_Init();

  lcd.init();
  lcd.backlight();

  showWelcomeMessage();
}

void loop() {
  if (!rfid.PICC_IsNewCardPresent()) return;
  if (!rfid.PICC_ReadCardSerial()) return;

  // Read UID
  String cardID = "";
  for (byte i = 0; i < rfid.uid.size; i++) {
    byte val = rfid.uid.uidByte[i];
    if (val < 0x10) cardID += "0"; // Add leading zero
    cardID += String(val, HEX);
    if (i < rfid.uid.size - 1) cardID += " ";
  }
  cardID.toUpperCase();

  Serial.println("Card Scanned: " + cardID);

  bool found = false;
  for (int i = 0; i < sizeof(students)/sizeof(students[0]); i++) {
    if (cardID == students[i].cardID) {

      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print(students[i].name);    // Line 1: Name

      lcd.setCursor(0,1);
      lcd.print("Present");           // Line 2: Present

      Serial.println("Student: " + students[i].name);
      Serial.println("Status: Present");

      delay(2000); // Keep message visible
      found = true;
      break;
    }
  }
  if (!found) {
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Unregistered Card");

    lcd.setCursor(0,1);
    lcd.print(cardID);               // Display UID of unregistered card

    Serial.println("Unregistered Card: " + cardID);
    delay(3000); // Longer so user can see UID
  }

  showWelcomeMessage();

  rfid.PICC_HaltA();
  rfid.PCD_StopCrypto1();
}

// Show welcome screen
void showWelcomeMessage() {
  lcd.clear();
  lcd.setCursor(2,0);
  lcd.print("Scan Your Card");
}
